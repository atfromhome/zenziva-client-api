{
    "name": "fromhome/zenziva-client-api",
    "description": "Unofficial Zenziva client api",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "zenziva",
        "sms",
        "laravel"
    ],
    "authors": [
        {
            "name": "Nuradiyana",
            "email": "me@nooradiana.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-simplexml": "*",
        "illuminate/notifications": "^11|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0",
        "nesbot/carbon": "^3.8|^3.9",
        "symfony/http-client": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symplify/easy-coding-standard": "^12.0",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Ziswapp\\Zenziva\\": "src/Ziswapp/Zenziva/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@ecs-fix",
            "@psalm",
            "@test"
        ],
        "ecs": "vendor/bin/ecs check",
        "ecs-fix": "vendor/bin/ecs check --fix",
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
